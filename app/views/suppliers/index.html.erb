<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Company number</th>
      <th>Company representative</th>
      <th>Second representative</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>City</th>
      <th>Recruitment percentage</th>
      <th>Description</th>
      <th>Image file name</th>
      <th>Image content type</th>
      <th>Image file size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.company %></td>
        <td><%= supplier.company_number %></td>
        <td><%= supplier.company_representative %></td>
        <td><%= supplier.second_representative %></td>
        <td><%= supplier.email %></td>
        <td><%= supplier.telephone %></td>
        <td><%= supplier.city %></td>
        <td><%= supplier.recruitment_percentage %></td>
        <td><%= supplier.description %></td>
        <td><%= supplier.image_file_name %></td>
        <td><%= supplier.image_content_type %></td>
        <td><%= supplier.image_file_size %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

